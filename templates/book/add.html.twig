{% extends 'base.html.twig' %}

{% block title %}Add book to library{% endblock %}

{% block body %}

    <div class="libraryViewer">
        <h1 class="libraryHeadline">Add book</h1>
        <p class="libraryExplanation">Enter the requested data below to add book to library, ISBN is mandatory.</p>
        
        <form class="libraryForm" action="{{ path('book_create') }}" method="post" enctype="multipart/form-data">
            <div class="libraryFormOrganizer">
                <label for="title">Title</label>
                <input type="text" id="title" name="title">
            </div>
            <div class="libraryFormOrganizer">
                <label for="author">Author</label>
                <input type="text" id="author" name="author">
            </div>
            <div class="libraryFormOrganizer">
                <label for="isbn">ISBN (mind the format)</label>
                <input type="text" id="isbn" name="isbn" required>
            </div>
            <div class="libraryFormOrganizer">
                <label for="image">Image</label>
                <input type="file" id="image" name="image">
            </div>
            <div class="libraryFormOrganizer">
                <button type="submit" class="libraryButton"!>Add</button>
            </div>
        </form>
    </div>

{% endblock %}
